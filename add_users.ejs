<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Add New Student</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required/>
                        </div>
                        <div class="mb-3">
                            <label for="surname">Surname</label>
                            <input type="text" name="surname" class="form-control form-control-lg" placeholder="Enter Surname" required/>
                        </div>
                        <div class="mb-3">
                            <label for="age">Age</label>
                            <input type="number" name="age" class="form-control form-control-lg" placeholder="Enter Age" required/>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Email" required/>
                        </div>
                        <div class="mb-3">
                            <label for="department">Department</label>
                            <select name="department" class="form-control form-control-lg" required>
                                <option value="">Select Department</option>
                                <option value="Medicine">Medicine</option>
                                <option value="Dentistry">Dentistry</option>
                                <option value="Pharmacy">Pharmacy</option>
                                <option value="Civil Engineering">Civil Engineering</option>
                                <option value="Software Engineering">Software Engineering</option>
                                <option value="Computre Engineering">Computre Engineering</option>
                                <option value="Architectural Engineering">Architectural Engineering</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add Student" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
